<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.magus.enviroment.ui.CustomActionBar
        android:id="@+id/custom_action_bar"
        android:layout_width="fill_parent"
        app:middle_text="关注"
        android:layout_height="wrap_content"></com.magus.enviroment.ui.CustomActionBar>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alarm_six"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/sileibaojing"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/overview_statistics"
            android:layout_toStartOf="@+id/overview_statistics"
            android:layout_marginRight="71dp"
            android:layout_marginEnd="71dp" />

        <ImageView
            android:id="@+id/overview_statistics"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/yichangtongji"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginRight="78dp"
            android:layout_marginEnd="78dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/touyuntongji"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginRight="80dp"
            android:layout_marginEnd="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/alarm_total"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/shujuchaxun"
            android:layout_marginRight="68dp"
            android:layout_marginEnd="68dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2" />

    </RelativeLayout>

</LinearLayout>