        app:middle_text="消息详情"
        app:left_image="@mipmap/back"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/me_message_info_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </ListView>

</LinearLayout>
