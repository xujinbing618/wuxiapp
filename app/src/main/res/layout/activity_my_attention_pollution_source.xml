<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.magus.enviroment.ui.CustomActionBar
        android:id="@+id/custom_action_bar"
        android:layout_width="fill_parent"
        app:middle_text="污染源"
        app:left_image="@mipmap/back"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/me_margin_height"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/source_city_name"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:gravity="center_vertical"
                android:text="企业"
                android:layout_width="wrap_content"
                android:layout_height="49dp" />

            <TextView
                android:id="@+id/my_select_all"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:gravity="center_vertical"
                android:text="全选"
                android:layout_width="wrap_content"
                android:layout_height="49dp" />
        </RelativeLayout>


        <View
            android:background="@color/me_submit_background"
            android:layout_width="fill_parent"
            android:layout_height="1px" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:background="@color/me_source_background"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/me_source_solid"
                android:background="@drawable/me_source_type_pressed_background"
                android:text="固"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/me_submit_background"
                android:layout_width="fill_parent"
                android:layout_height="1px" />

            <Button
                android:id="@+id/me_source_liquid"
                android:background="@drawable/me_source_type_pressed_background"
                android:text="液"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/me_submit_background"
                android:layout_width="fill_parent"
                android:layout_height="1px" />

            <Button
                android:id="@+id/me_source_gas"
                android:background="@drawable/me_source_type_pressed_background"
                android:text="气"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ListView
            android:layout_weight="3"
            android:id="@+id/enterprice_list"
            android:layout_width="0dp"
            android:layout_height="fill_parent"></ListView>

    </LinearLayout>


</LinearLayout>