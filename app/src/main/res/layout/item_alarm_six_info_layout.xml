<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/alarm_six_info_layout"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/phone_message"
        android:weightSum="8">

        <CheckBox
            android:id="@+id/alarm_six_info_check"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/alarm_six_info_time"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="1dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/alarm_six_info_type"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="异常类型"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/alarm_six_info_status"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="备注"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>