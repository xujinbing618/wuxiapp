<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/custom_action_bar_layout"
    android:layout_width="match_parent"
    android:background="@color/action_bar_background"
    android:layout_height="50dp">
    <ImageView
        android:layout_marginLeft="@dimen/actionbar_image_margin"
        android:id="@+id/left_image"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/actionbar_image_width"
        android:layout_height="@dimen/actionbar_image_width"
        android:src="@mipmap/arrow_left"/>
    <TextView
        android:id="@+id/middle_text"
        android:text="中间的测试"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView

        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/actionbar_image_margin"
        android:src="@drawable/nav_home"
        android:id="@+id/right_image"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/actionbar_image_width"
        android:layout_height="@dimen/actionbar_image_width" />

</RelativeLayout>