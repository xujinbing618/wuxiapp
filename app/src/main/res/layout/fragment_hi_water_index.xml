<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/air_range_bg_1"
        android:layout_width="160dp"
        android:layout_height="160dp">

        <TextView
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="55sp"
            android:text="IV"
            android:textColor="@color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:textSize="13sp"
            android:text="主要污染指标 DO"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:background="@drawable/corner_top_left_background"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="pH"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />

                <TextView
                    android:id="@+id/water_index_ph"
                    android:layout_weight="1"
                    android:text="64mg/m"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/corner_top_right_background"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="DO"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />

                <TextView
                    android:id="@+id/water_index_do"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="64mg/m"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:background="@drawable/corner_bottom_left_background"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="CODMn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />

                <TextView
                    android:id="@+id/water_index_codmn"
                    android:layout_weight="1"
                    android:text="64mg/m"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/corner_bottom_right_background"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="NH3-N"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />


                <TextView
                    android:id="@+id/water_index_nh3n"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="64mg/m"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>