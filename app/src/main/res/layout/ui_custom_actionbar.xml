<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_action_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/action_bar_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/left_image"
        android:layout_width="@dimen/actionbar_image_width"
        android:layout_height="@dimen/actionbar_image_width"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/actionbar_image_margin"
        android:src="@mipmap/back" />

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/actionbar_image_margin"
        android:layout_toRightOf="@id/left_image"
        android:text="左边"
        android:visibility="gone" />

    <TextView
        android:id="@+id/middle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxEms="9"
        android:singleLine="true"
        android:text="中间的测试"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/right_image"
        android:layout_width="@dimen/actionbar_image_width"
        android:layout_height="@dimen/actionbar_image_width"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/actionbar_image_margin"
        android:src="@drawable/nav_home"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/actionbar_image_margin"
        android:layout_toLeftOf="@id/right_image"
        android:text="右边"
        android:visibility="gone" />
</RelativeLayout>