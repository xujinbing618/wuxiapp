<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    android:orientation="vertical"
    android:weightSum="2">

    <com.magus.enviroment.ui.CustomActionBar
        android:id="@+id/custom_action_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/attention_action_bar_background"
        app:left_image="@mipmap/back"
        app:middle_text="总量监控" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title"
            android:layout_margin="5dp"
            android:drawSelectorOnTop="true"/>

        <com.magus.enviroment.ep.fragment.attention.ui.DialChartView
            android:id="@+id/circle_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="60dp" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/description"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@mipmap/purse1"
            android:gravity="center"
            android:text="总量"
            android:textColor="@color/black"
            android:textSize="10sp"/>
        <TextView
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@mipmap/purse2"
            android:gravity="center"
            android:text="预警值"
            android:textColor="@color/black"
            android:textSize="10sp" />
        <TextView
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@mipmap/purse3"
            android:gravity="center"
            android:text="排放值"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/title_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:id="@+id/pollution"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_so2"
                android:background="@drawable/radiobutton_background"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="SO2" />

            <Button
                android:id="@+id/btn_nox"
                android:background="@drawable/radiobutton_background"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="NOX" />

            <Button
                android:id="@+id/btn_dust"
                android:background="@drawable/radiobutton_background"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="烟尘" />

            <Button
                android:id="@+id/btn_cod"
                android:background="@drawable/radiobutton_background"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="COD" />
            <Button
                android:id="@+id/btn_nh3n"
                android:background="@drawable/radiobutton_background"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="NH3-N" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fg_total_monitoring_linechart"
            android:layout_width="fill_parent"
            android:layout_above="@id/pollution"
            android:layout_height="fill_parent">
        </FrameLayout>

    </RelativeLayout>
</LinearLayout>